@model ContatoModel;
@{
    ViewData["Title"] = "Confirmação apagar o contato";
}

<div class="text-center">
    <h3 asp-for=""> Realmente deseja apagar o contato de (@Model.Nome) ?
  </h3>
</div>
<a class="btn btn-primary btn-block" role="button" asp-controller="Contato" asp-action="Index">Cancelar exclusão</a>

<a class="btn btn-danger btn-block" asp-route-id="@Model.Id" asp-controller="Contato" asp-action="Apagar"  role="button">Confirmar exclusão</a>
